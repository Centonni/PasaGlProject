<h1>Exigency list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Functionality</th>
            <th>Number</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Charge</th>
            <th>Start_date</th>
            <th>End_date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('exigency_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.functionality }}</td>
            <td>{{ entity.number }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.priority }}</td>
            <td>{{ entity.charge }}</td>
            <td>{% if entity.startdate %}{{ entity.startdate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.enddate %}{{ entity.enddate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('exigency_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('exigency_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('exigency_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
