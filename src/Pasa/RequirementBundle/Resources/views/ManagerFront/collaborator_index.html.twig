{% extends 'PasaRequirementBundle::manager_layout.html.twig' %}
{% block content %}
<h1>Collaborator list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>First_name</th>
            <th>Last_name</th>
            <th>Username</th>
            <th>Salt</th>
            <th>Password</th>
            <th>Email</th>
            <th>Is_active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('collaborator_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.salt }}</td>
            <td>{{ entity.password }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.isactive }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('collaborator_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('collaborator_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('managerfront_collaborator_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}