{% extends 'PasaRequirementBundle::layout.html.twig' %}

{% block content %}
<h1>Progression list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Percentage</th>
            <th>Progression_date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('progression_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.percentage }}</td>
            <td>{% if entity.progressiondate %}{{ entity.progressiondate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('progression_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('progression_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('progression_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}